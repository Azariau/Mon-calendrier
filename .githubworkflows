<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendrier de l'Avent</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: url('fond-noel.jpg') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: white;
        }
        .calendar {
            display: grid;
            grid-template-columns: repeat(6, 100px);
            grid-gap: 10px;
        }
        .case {
            width: 100px;
            height: 100px;
            background: url('papier-cadeau.jpg');
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            border: 2px solid #fff;
            border-radius: 10px;
            cursor: pointer;
            transition: transform 0.3s;
        }
        .case:hover {
            transform: scale(1.1);
        }
        .modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            display: none;
            justify-content: center;
            align-items: center;
        }
        .modal img {
            max-width: 80%;
            max-height: 80%;
            border-radius: 10px;
        }
        .modal.show {
            display: flex;
        }
    </style>
</head>
<body>
    <div class="calendar">
        <!-- Générer 24 cases -->
        <div class="case" data-image="image1.jpg"></div>
        <div class="case" data-image="image2.jpg"></div>
        <div class="case" data-image="image3.jpg"></div>
        <!-- ... Ajoutez jusqu'à 24 cases -->
    </div>

    <!-- Modal pour afficher les images -->
    <div class="modal" id="modal">
        <img id="modalImage" src="" alt="Contenu de la case">
    </div>

    <script>
        // Sélection des éléments
        const cases = document.querySelectorAll('.case');
        const modal = document.getElementById('modal');
        const modalImage = document.getElementById('modalImage');

        // Ajouter un écouteur d'événement à chaque case
        cases.forEach(caseElement => {
            caseElement.addEventListener('click', () => {
                const image = caseElement.getAttribute('data-image');
                modalImage.src = image;
                modal.classList.add('show');
            });
        });

        // Fermer la modal lorsqu'on clique dessus
        modal.addEventListener('click', () => {
            modal.classList.remove('show');
        });
    </script>
</body>
</html>
